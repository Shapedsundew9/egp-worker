{
    "problem_definitions": {
        "type": "string",
        "regex": "^((http|https)://)[-a-zA-Z0-9@:%._\\+~#?&//=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%._\\+~#?&//=]*)$",
        "minlength": 8,
        "meta": {
            "description": "The URL of the problem definitions file."
        },
        "maxlength": 2048,
        "required": true,
        "default": "https://github.com/Shapedsundew9/egp-problems/blob/main/egp_problems.json"
    },
    "problem_folder": {
        "type": "string",
        "default": "/tmp/egp",
        "minlength": 1,
        "maxlength": 256,
        "regex": "[ -~]{0,1024}",
        "meta": {
            "description": "The folder where problem definitions, data & code is stored."
        }
    },
    "populations": {
        "type": "dict",
        "schema": {
            "error_on_commit_hash_mismatch" : {
                "type": "boolean",
                "default": false,
                "meta": {
                    "description": "If a population git repo is specified do not error if the repo exists and the current commit hash does not match the one specified in the configuration. This option should be set to true in most circumstances but is useful to set to false when developing a population fitness and survivability functions."
                }
            },
            "configs": {
                "type": "list",
                "schema": {

                }
            }
        }
    },
    "biome": {
        "type": "dict",
        "schema": {
            "table": {
                "type": "string",
                "default": "biome_genomic_library",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+"
            },
            "database": {
                "type": "string",
                "default": "erasmus_db",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+",
                "check_with": "valid_default_database",        
                "dependencies": ["databases"]      
            }
        }
    },
    "microbiome": {
        "type": "dict",
        "schema": {
            "table": {
                "type": "string",
                "default": "microbiome_genomic_library",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+"
            },
            "database": {
                "type": "string",
                "default": "erasmus_db",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+",
                "dependencies": ["databases"]      
            }
        }
    },
    "gene_pool": {
        "type": "dict",
        "schema": {
            "table": {
                "type": "string",
                "default": "gene_pool",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+"
            },
            "database": {
                "type": "string",
                "default": "erasmus_db",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+",
                "dependencies": ["databases"]      
            }
        }
    },
    "databases": {
        "type": "dict",
        "default": {
            "erasmus_db": {
                "recreate": false,
                "temp": false,
                "host": "localhost",
                "user": "erasmus",
                "password": "erasmus",
                "port": 5432,
                "maintenance_db": "postgres"
            }
        },
        "keysrules": {
            "type": "string",
            "minlength": 1,
            "maxlength": 64,
            "regex": "[a-zA-Z-_0-9]*"
        },
        "valuesrules": {
            "type": "dict",
            "schema": {

            }
        }
    }
}