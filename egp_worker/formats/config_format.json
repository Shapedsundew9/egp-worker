{
    "problem_definitions": {
        "type": "string",
        "regex": "^((http|https)://)[-a-zA-Z0-9@:%._\\+~#?&//=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%._\\+~#?&//=]*)$",
        "minlength": 8,
        "meta": {
            "description": "The URL of the problem definitions file."
        },
        "maxlength": 2048,
        "required": true,
        "default": "https://raw.githubusercontent.com/Shapedsundew9/egp-problems/main/egp_problems.json"
    },
    "problem_folder": {
        "type": "string",
        "default": "/tmp/egp",
        "minlength": 1,
        "maxlength": 256,
        "regex": "[ -~]{0,1024}",
        "meta": {
            "description": "The folder where problem definitions, data & code is stored."
        }
    },
    "populations": {
        "type": "dict",
        "schema": {
            "worker_id": {
                "type": "string",
                "minlength": 36,
                "maxlength": 36,
                "regex": "[a-zA-Z0-9-]{36}",
                "readonly": true,
                "meta": {
                    "description": "The worker id is generated at run time."
                }
            },
            "configs": {
                "type": "list",
                "schema": {
                    "type": "dict",
                    "schema": {}
                }
            }
        }
    },
    "biome": {
        "type": "dict",
        "schema": {
            "table": {
                "type": "string",
                "default": "biome_genomic_library",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+"
            },
            "database": {
                "type": "string",
                "default": "erasmus_db",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+",      
                "dependencies": ["databases"]      
            }
        }
    },
    "microbiome": {
        "type": "dict",
        "schema": {
            "table": {
                "type": "string",
                "default": "microbiome_genomic_library",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+"
            },
            "database": {
                "type": "string",
                "default": "erasmus_db",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+",
                "dependencies": ["databases"]      
            }
        }
    },
    "gene_pool": {
        "type": "dict",
        "schema": {
            "table": {
                "type": "string",
                "default": "gene_pool",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+"
            },
            "database": {
                "type": "string",
                "default": "erasmus_db",
                "minlength": 1,
                "maxlength": 64,
                "regex": "[a-zA-Z0-9_-]+",
                "dependencies": ["databases"]      
            }
        }
    },
    "databases": {
        "type": "dict",
        "default": {
            "erasmus_db": {
                "host": "localhost",
                "user": "erasmus",
                "password": "erasmus",
                "port": 5432,
                "maintenance_db": "postgres"
            }
        },
        "keysrules": {
            "type": "string",
            "minlength": 1,
            "maxlength": 64,
            "regex": "[a-zA-Z-_0-9]*"
        },
        "valuesrules": {
            "type": "dict",
            "schema": {

            }
        }
    }
}